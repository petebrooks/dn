.glove-container
  glove.active(name="Works" image="assets/images/red_glove.png")

info-box
  .display
    img(src=" {{ allPhotos()[selected] }} ")
    .wall-text
      h3 {{ work.title }}
      p {{ work.dimensions }}
      p {{ work.media }}
      p {{ work.year }}
      p {{ work.description }}
  .detail-gallery
    //- .detail
    //-   img(src="{{ work.photo_main }}" ng-class="isSelected('main')")
    .detail(ng-repeat="photo in allPhotos()" ng-class="isSelected({{ $index }})" ng-click="setSelected($index)")
      .thumb(style="background-image: url('{{ photo }}')")
